    "target": "es5",
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "./lib"
  },
  "include": [
    "src/**/*"
  ]
}
